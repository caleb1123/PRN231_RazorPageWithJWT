@page
@model FrontEnd.Pages.IndexModel // Đảm bảo bạn sử dụng mô hình IndexModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login Page</h1>

<div>
    <form method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" asp-for="Login.Email" class="form-control" id="email" placeholder="Enter email" />
            <span asp-validation-for="Login.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" asp-for="Login.Password" class="form-control" id="password" placeholder="Password">
            <span asp-validation-for="Login.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Login.Message))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @Model.Login.Message
        </div>
    }
</div>
